{
    "name": "vscode-zx-debugger",
    "displayName": "ZX Debugger",
    "version": "0.0.17",
    "preview": true,
    "publisher": "Tenebrous",
    "description": "ZX debugger extension",
    "author": {
        "name": "Tenebrous",
        "email": "m@tenebrous.co.uk"
    },
    "categories": [
        "Debuggers"
    ],
    "keywords": [
        "zx",
        "debugger",
        "debug",
        "z80",
        "spectrum"
    ],
    "activationEvents": [
        "onDebug"
    ],
    "engines": {
        "vscode": "^1.17.0"
    },
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "tslint": "tslint -c tslint.json src/extension.ts"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.5",
        "@types/node": "*"
    },
    "contributes": {
        "configuration": {
            "title": "ZX Debugger",
            "properties": {
                "zxdebug.disassembler.blankLineBeforeLabel": {
                    "description": "Whether to add an extra line before labels",
                    "type": "boolean",
                    "default": false
                },
                "zxdebug.format.hexPrefix": {
                    "description": "String to add before any hex number",
                    "type": "string",
                    "default": "$"
                },
                "zxdebug.format.hexSuffix": {
                    "description": "String to add after any hex number",
                    "type": "string",
                    "default": ""
                },
                "zxdebug.format.labelPosition": {
                    "description": "Relative position of label to address when shown together",
                    "type": "string",
                    "default": "right",
                    "enum": [
                        "left",
                        "right"
                    ]
                }
            }
        },
        "debuggers": [
            {
                "type": "zxdebug",
                "label": "ZX Debugger",
                "enableBreakpointsFor": {
                    "languageIds": [
                        "zx-debug-disasm"
                    ]
                },
                "program": "./bin/vscode-zx-debugger.exe",
                "osx": {
                    "runtime": "mono"
                },
                "linux": {
                    "runtime": "mono"
                },
                "configurationAttributes": {
                    "attach": {
                        "properties": {
                            "projectFolder": {
                                "type": "string",
                                "description": "Project folder",
                                "default": "${workspaceRoot}"
                            },
                            "rules":
                            {
                                "type": "array",
                                "items": {
                                    "rule": {
                                        "type": "string"
                                    },
                                    "maps": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "opcodes": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "maps": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "opcodes": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "default": false
                            }
                        }
                    }
                }
            }
        ],
        "languages": [
            {
                "id": "zx-debug-disasm",
                "aliases": [
                    "ZX Debugger Disassembly"
                ],
                "extensions": [
                    ".zdis"
                ],
                "configuration": "./syntax/zx-debug-disasm.json"
            }
        ],
        "grammars": [
            {
                "language": "zx-debug-disasm",
                "scopeName": "source.asm.z80",
                "path": "./syntax/zx-debug-disasm.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "extension.zxdebug.testCommand",
                "title": "Test command",
                "category": "ZX Debugger"
            },
            {
                "command": "extension.zxdebug.setNextStatement",
                "title": "Set Next Statement",
                "category": "ZX Debugger"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.zxdebug.setNextStatement",
                    "when": "resourceLangId == zx-debug-disasm && inDebugMode"
                }
            ]
        }
    }
}
