{
    "name": "vscode-zx-debugger",
    "displayName": "ZX Debugger",
    "version": "0.0.11",
    "preview": true,
    "publisher": "Tenebrous",
    "description": "ZX debugger extension",
    "author": {
        "name": "Tenebrous",
        "email": "m@tenebrous.co.uk"
    },
    "categories": [
        "Debuggers"
    ],
    "keywords": [
        "zx",
        "debugger",
        "debug",
        "z80",
        "spectrum"
    ],
    "activationEvents": [
        "*"
    ],
    "engines": {
        "vscode": "^1.16.0"
    },
    "main": "./extension/zxdebug",
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "contributes": {
        "configuration": {
            "title": "ZX Debugger",
            "properties": {
                "zxdebug.disassembler.blankLineBeforeLabel": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether to add an extra line before labels"
                },
                "zxdebug.hexPrefix": {
                    "type": "string",
                    "default": "$"
                },
                "zxdebug.hexSuffix": {
                    "type": "string",
                    "default": ""
                }
            }
        },
        "debuggers": [
            {
                "type": "zxdebug",
                "label": "ZX Debugger",
                "enableBreakpointsFor": {
                    "languageIds": [
                        "zx-debug-disasm"
                    ]
                },
                "program": "./bin/vscode-zx-debugger.exe",
                "osx": {
                    "runtime": "mono"
                },
                "linux": {
                    "runtime": "mono"
                },
                "startSessionCommand": "extension.zxdebug.startSession",
                "configurationAttributes": {
                    "attach": {
                        "properties": {
                            "cwd": {
                                "type": "string",
                                "description": "Project folder",
                                "default": "${workspaceRoot}"
                            },
                            "sourceMaps": {
                                "type": "array",
                                "default": [
                                    "48k_rom.dbg"
                                ],
                                "items": {
                                    "type": "string"
                                }
                            },
                            "opcodeTables": {
                                "type": "array",
                                "default": [
                                    "z80.json"
                                ],
                                "items": {
                                    "type": "string"
                                }
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "default": false
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "zxdebug",
                        "name": "ZX Debugger",
                        "request": "attach",
                        "cwd": "${workspaceRoot}",
                        "maps": [],
                        "stopOnEntry": true
                    }
                ]
            }
        ],
        "languages": [
            {
                "id": "zx-debug-disasm",
                "aliases": [
                    "ZX Debugger Disassembly"
                ],
                "extensions": [
                    ".zdis"
                ],
                "configuration": "./syntax/zx-debug-disasm.json"
            }
        ],
        "grammars": [
            {
                "language": "zx-debug-disasm",
                "scopeName": "source.asm.z80",
                "path": "./syntax/zx-debug-disasm.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "extension.zxdebug.testCommand",
                "title": "Test command",
                "category": "ZX Debugger"
            }
        ]
    }
}