{
  "name": "vscode-zesarux-debug",
  "displayName": "Debugger for ZEsarUX",
  "version": "0.0.1",
  "publisher": "Tenebrous",
  "description": "ZEsarUX debugger extension",
  "engines": {
    "vscode": "^1.16.0"
  },
  "categories": [
    "Debuggers"
  ],
  "keywords": [
    "zesarux",
    "debugger",
    "debug",
    "z80",
    "spectrum"
  ],
  "main": "./attach",
  "activationEvents": [
    "onCommand:attach.attachToDebugger"
  ],
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "contributes": {
    "debuggers": [
      {
        "type": "zesarux",
        "label": "ZEsarUX Debugger",
        "enableBreakpointsFor": {
          "languageIds": [
            "z80",
            "Z80 Assembly",
            "c"
          ]
        },
        "program": "./bin/vscode-zesarux-debug.exe",
        "osx": {
          "runtime": "mono"
        },
        "linux": {
          "runtime": "mono"
        },
        "configurationAttributes": {
          "launch": {
            "properties": {
              "folder": {
                "type": "string",
                "description": "Project folder"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "ZEsarUX",
            "type": "zesarux",
            "request": "launch",
            "folder": "${workspaceRoot}"
          }
        ]
      }
    ]
  }
}