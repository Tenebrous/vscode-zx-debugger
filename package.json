{
    "name": "vscode-zx-debugger",
    "displayName": "ZX Debugger",
    "version": "0.0.7",
    "preview": true,
    "publisher": "Tenebrous",
    "description": "ZX debugger extension",
    "author": {
        "name": "Tenebrous",
        "email": "m@tenebrous.co.uk"
    },
    "categories": [
        "Debuggers"
    ],
    "keywords": [
        "zx",
        "debugger",
        "debug",
        "z80",
        "spectrum"
    ],
    "activationEvents": [
        "onCommand:attach.attachToDebugger"
    ],
    "engines": {
        "vscode": "^1.16.0"
    },
    "main": "./attach",
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "contributes": {
        "debuggers": [
            {
                "type": "zxdebug",
                "label": "ZX Debugger",
                "enableBreakpointsFor": {
                    "languageIds": [
                        "zx-debug-disasm"
                    ]
                },
                "program": "./bin/vscode-zx-debugger.exe",
                "osx": {
                    "runtime": "mono"
                },
                "linux": {
                    "runtime": "mono"
                },
                "configurationAttributes": {
                    "attach": {
                        "properties": {
                            "folder": {
                                "type": "string",
                                "description": "Project folder"
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "zxdebug",
                        "name": "ZX Debugger",
                        "request": "attach",
                        "folder": "${workspaceRoot}"
                    }
                ]
            }
        ],
        "languages": [
            {
                "id": "zx-debug-disasm",
                "aliases": [
                    "ZX Debugger Disassembly"
                ],
                "extensions": [
                    ".zdis"
                ],
                "configuration": "./syntax/zx-debug-disasm.json"
            }
        ],
        "grammars": [
            {
                "language": "zx-debug-disasm",
                "scopeName": "source.asm.z80",
                "path": "./syntax/zx-debug-disasm.tmLanguage.json"
            }
        ]
    }
}