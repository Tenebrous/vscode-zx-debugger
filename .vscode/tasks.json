{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build dotnet",
            "command": "dotnet build",
            "type": "shell",
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "build extension",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "taskName": "build all",
            "dependsOn": ["build dotnet", "build extension"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "taskName": "publish",
            "command": "vsce publish patch",
            "type": "shell",
            "dependsOn": ["build dotnet", "build extension"],
            "problemMatcher": []
        }
    ]
}